                          alignItems: 'start'
                        }}>

                          {/* Linke Spalte: SchÃ¼ler-Verteilung */}
                          {statistiken?.graduierungen && statistiken.graduierungen.length > 0 && (
                            <div style={{
                              padding: '25px',
