                              onChange={(e) => {
                                if (e.target.checked) {
                                  handleFormChange('ausruestung', [...formData.ausruestung, equipment]);
                                } else {
                                  handleFormChange('ausruestung', formData.ausruestung.filter(item => item !== equipment));
