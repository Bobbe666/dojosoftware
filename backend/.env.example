# Server
PORT=5001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_secure_database_password
DB_NAME=dojo

# JWT - WICHTIG: Generiere einen sicheren zufälligen String!
# Tipp: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_min_32_characters

# ============================================
# SESSION & SECURITY (Phase 1 Security Upgrade)
# ============================================

# Session Secret - WICHTIG: Generiere einen sicheren zufälligen String!
# Tipp: openssl rand -base64 64
SESSION_SECRET=your_secure_session_secret_min_64_characters

# CSRF Secret (kann gleich wie SESSION_SECRET sein)
CSRF_SECRET=your_secure_csrf_secret

# Cookie Domain (für Subdomain-Sharing, z.B. .tda-intl.org)
# Leer lassen für Same-Origin
COOKIE_DOMAIN=

# Session Timeout in Millisekunden (Standard: 2 Stunden)
SESSION_TIMEOUT=7200000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# CORS - Komma-separierte Liste erlaubter Origins
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5001

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Backend URL (für Media-URLs bei Social Media Posts)
BACKEND_URL=https://dojo.tda-intl.org

# Meta/Facebook API (für Social Media Integration)
# Erstelle eine App unter: https://developers.facebook.com/
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=https://dojo.tda-intl.org/api/marketing-aktionen/accounts/callback
